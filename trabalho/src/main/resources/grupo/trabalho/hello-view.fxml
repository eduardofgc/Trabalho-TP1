<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350" prefWidth="500" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo.trabalho.HelloController">

   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="40.0">

         <Label style="-fx-text-fill: #2c3e50;" text="Sistema de Gestão de RH">
            <font>
               <Font name="Segoe UI Semibold" size="26" />
            </font>
         </Label>

         <VBox alignment="CENTER_LEFT" prefWidth="350" spacing="5.0">
            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="Usuário:" />
            <TextField fx:id="usernameField" prefWidth="350" promptText="Digite seu usuário" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8;" />
         </VBox>

         <VBox alignment="CENTER_LEFT" prefWidth="350" spacing="5.0">
            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="Senha:" />
            <PasswordField fx:id="passwordField" prefWidth="350" promptText="Digite sua senha" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8;" />
         </VBox>
      </VBox>
      <Button fx:id="loginButton" layoutX="139.0" layoutY="257.0" onAction="#handleLogin" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 8;" text="Login" />

      <Button fx:id="exitButton" layoutX="284.0" layoutY="257.0" onAction="#handleExit" prefHeight="36.0" prefWidth="74.0" style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 8;" text="Sair" />
   </children>
</AnchorPane>
