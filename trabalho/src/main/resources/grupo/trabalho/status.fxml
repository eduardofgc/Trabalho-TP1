<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="420" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.StatusController">

    <children>
        <!-- Título -->
        <VBox alignment="CENTER" spacing="10.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="40.0">

            <Label text="Status da Candidatura" style="-fx-text-fill: #2c3e50;">
                <font>
                    <Font name="Segoe UI Semibold" size="32" />
                </font>
            </Label>
        </VBox>

        <!-- Conteúdo principal -->
        <VBox alignment="CENTER" spacing="15.0"
              AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0"
              AnchorPane.topAnchor="130.0">

            <Label fx:id="lblStatus"
                   text="Carregando..."
                   style="-fx-text-fill: #2c3e50;
                          -fx-font-size: 16px;
                          -fx-background-color: white;
                          -fx-background-radius: 8;
                          -fx-padding: 10 20 10 20;
                          -fx-alignment: center;" />
        </VBox>

        <!-- Botão Voltar -->
        <Button fx:id="menuButton"
                layoutX="210.0"
                layoutY="340.0"
                onAction="#voltarMenu"
                style="-fx-background-color: #2c3e50;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-padding: 10 20 10 20;
                       -fx-background-radius: 8;"
                text="Voltar ao Menu Principal"/>
    </children>
</AnchorPane>