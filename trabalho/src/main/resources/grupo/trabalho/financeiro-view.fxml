<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="900" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo.trabalho.FinanceiroController">

    <children>

        <Label layoutX="366.0" layoutY="14.0" prefHeight="60.0" prefWidth="168.0" text="Financeiro">
            <font>
                <Font size="36.0" />
            </font>
        </Label>

        <TableView fx:id="tabelaFuncionarios" layoutX="50.0" layoutY="90.0" prefHeight="350.0" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="150" text="Nome" />
                <TableColumn fx:id="colCpf" prefWidth="120" text="CPF" />
                <TableColumn fx:id="colMatricula" prefWidth="100" text="Matrícula" />
                <TableColumn fx:id="colCargo" prefWidth="120" text="Cargo" />
                <TableColumn fx:id="colDepartamento" prefWidth="120" text="Departamento" />
                <TableColumn fx:id="colRegime" prefWidth="100" text="Regime" />
                <TableColumn fx:id="colSalarioBase" prefWidth="100" text="Salário Base" />
                <TableColumn fx:id="colSalarioLiquido" prefWidth="100" text="Salário Líquido" />
                <TableColumn fx:id="colDataAdmissao" prefWidth="120" text="Data Admissão" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" layoutX="51.0" layoutY="460.0" prefHeight="40.0" prefWidth="800.0" spacing="10">
   <children>

               <ComboBox fx:id="comboCargo" prefWidth="120.0" promptText="Cargo" />
               <ComboBox fx:id="comboRegime" prefWidth="150" promptText="Regime" />
               <ComboBox fx:id="comboStatus" prefWidth="120" promptText="Status" />
               <ComboBox fx:id="comboDepartamento" prefWidth="150" promptText="Departamento" />

               <Button onAction="#filtrarFuncionarios" prefWidth="100" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Filtrar" />

               <Button onAction="#limparFiltros" prefWidth="100" style="-fx-background-color: #bdc3c7; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-background-radius: 8;" text="Limpar" />
   </children>

        </HBox>

        <Button fx:id="btnAtualizar" layoutX="300.0" layoutY="520.0" onAction="#atualizarTabela" prefWidth="120.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Atualizar" />

        <Button fx:id="exportarButton" layoutX="450.0" layoutY="520.0" onAction="#handleExportarRelatorio" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Gerar Folha" />


        <Button fx:id="menuButton" layoutX="720.0" layoutY="520.0" onAction="#handleMenuButton" prefWidth="130.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Voltar" />

        <!-- Total da Folha -->
        <Label fx:id="labelTotal" layoutX="50.0" layoutY="565.0" prefWidth="400.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Total da folha: R$ 0,00" />

    </children>
</AnchorPane>
