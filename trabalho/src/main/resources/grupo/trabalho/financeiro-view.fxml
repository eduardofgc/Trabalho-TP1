<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.FinanceiroController">


        <VBox alignment="CENTER" spacing="20.0"
              AnchorPane.leftAnchor="100.0"
              AnchorPane.rightAnchor="100.0"
              AnchorPane.topAnchor="60.0">

            <!-- Título -->
            <Label text="Financeiro" style="-fx-text-fill: #2c3e50;">
                <font>
                    <Font name="Segoe UI Semibold" size="32" />
                </font>
            </Label>

            <!-- Botões principais -->

            <Button text="Cadastrar Funcionário"/>

            <Button text="Cadastrar Funcionário"
                    prefWidth="300"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50;
                           -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                           -fx-background-radius: 8;" />

            <Button text="Configurar Regras Salariais"
                    prefWidth="300"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50;
                           -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                           -fx-background-radius: 8;" />

            <Button text="Gerar Folha de Pagamento"
                    prefWidth="300"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50;
                           -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                           -fx-background-radius: 8;" />

        </VBox>

        <!-- Botão de Voltar -->
        <Button fx:id="menuButton"
                layoutX="200.0" layoutY="330.0"
                prefHeight="42.0" prefWidth="200.0"
                text="Voltar ao Menu Principal"
                onAction="#handleMenuButton"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white;
                       -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                       -fx-background-radius: 8;" />

</AnchorPane>
