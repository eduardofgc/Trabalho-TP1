<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="grupo.trabalho.FinanceiroController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);">

    <children>

        <!-- Título -->
        <Label layoutX="366.0" layoutY="14.0" prefHeight="60.0" prefWidth="168.0" text="Financeiro">
            <font>
                <Font size="36.0"/>
            </font>
        </Label>

        <!-- Tabela de Funcionários -->
        <TableView fx:id="tabelaFuncionarios"
                   layoutX="50.0" layoutY="90.0"
                   prefHeight="350.0" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="150" text="Nome"/>
                <TableColumn fx:id="colCpf" prefWidth="120" text="CPF"/>
                <TableColumn fx:id="colMatricula" prefWidth="100" text="Matrícula"/>
                <TableColumn fx:id="colCargo" prefWidth="120" text="Cargo"/>
                <TableColumn fx:id="colDepartamento" prefWidth="120" text="Departamento"/>
                <TableColumn fx:id="colRegime" prefWidth="100" text="Regime"/>
                <TableColumn fx:id="colSalarioBase" prefWidth="100" text="Salário Base"/>
                <TableColumn fx:id="colSalarioLiquido" prefWidth="100" text="Salário Líquido"/>
                <TableColumn fx:id="colDataAdmissao" prefWidth="120" text="Data Admissão"/>
            </columns>
        </TableView>

        <!-- Seção de filtros centralizada -->
        <HBox layoutX="140.0" layoutY="460.0"
              spacing="10" alignment="CENTER"
              prefWidth="620.0" prefHeight="40.0">

            <ComboBox fx:id="comboCargo" promptText="Cargo" prefWidth="120"/>
            <ComboBox fx:id="comboRegime" promptText="Regime" prefWidth="150"/>
            <ComboBox fx:id="comboStatus" promptText="Status" prefWidth="120"/>
            <ComboBox fx:id="comboDepartamento" promptText="Departamento" prefWidth="150"/>

            <Button text="Filtrar"
                    onAction="#filtrarFuncionarios"
                    prefWidth="100"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>

            <Button text="Limpar"
                    onAction="#limparFiltros"
                    prefWidth="100"
                    style="-fx-background-color: #bdc3c7; -fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-background-radius: 8;"/>

        </HBox>

        <!-- Botões inferiores -->
        <Button fx:id="btnAtualizar"
                layoutX="300.0" layoutY="520.0"
                prefWidth="120.0"
                text="Atualizar"
                onAction="#atualizarTabela"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>

        <Button fx:id="btnExportarCSV"
                layoutX="450.0" layoutY="520.0"
                prefWidth="120.0"
                text="Exportar CSV"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>

        <Button fx:id="menuButton"
                layoutX="720.0" layoutY="520.0"
                prefWidth="130.0"
                text="Voltar"
                onAction="#handleMenuButton"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>

        <!-- Total da Folha -->
        <Label fx:id="labelTotal"
               layoutX="50.0" layoutY="565.0"
               prefWidth="400.0"
               text="Total da folha: R$ 0,00"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    </children>
</AnchorPane>