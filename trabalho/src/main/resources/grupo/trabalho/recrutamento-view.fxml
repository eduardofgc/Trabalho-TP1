<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="441.0" prefWidth="600.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo.trabalho.RecrutamentoController">

    <children>
        <!-- Título -->
        <Label layoutX="34.0" layoutY="20.0" prefHeight="70.0" prefWidth="400.0"
               style="-fx-text-fill: #333333; -fx-font-weight: bold;" text="Recrutamento">
            <font>
                <Font size="36.0"/>
            </font>
        </Label>

        <!-- Botões -->
        <Button layoutX="34.0" layoutY="160.0" mnemonicParsing="false"
                prefHeight="40.0" prefWidth="530.0"
                style="-fx-background-color: white; -fx-text-fill: black; -fx-background-radius: 25;
                       -fx-font-size: 14px; -fx-padding: 6 18 6 18;"
                text="Cadastrar vagas"/>

        <Button layoutX="34.0" layoutY="210.0" mnemonicParsing="false"
                prefHeight="40.0" prefWidth="530.0"
                style="-fx-background-color: white; -fx-text-fill: black; -fx-background-radius: 25;
                       -fx-font-size: 14px; -fx-padding: 6 18 6 18;"
                text="Listar vagas"/>

        <Button layoutX="34.0" layoutY="260.0" mnemonicParsing="false"
                prefHeight="40.0" prefWidth="530.0"
                style="-fx-background-color: white; -fx-text-fill: black; -fx-background-radius: 25;
                       -fx-font-size: 14px; -fx-padding: 6 18 6 18;"
                text="Agendar entrevista"/>

        <Button fx:id="menuButton" layoutX="34.0" layoutY="310.0" mnemonicParsing="false"
                prefHeight="40.0" prefWidth="530.0"
                style="-fx-background-color: white; -fx-text-fill: black; -fx-background-radius: 25;
                       -fx-font-size: 14px; -fx-padding: 6 18 6 18;"
                text="Voltar ao menu principal" onAction="#voltarMenu"/>
    </children>
</AnchorPane>
