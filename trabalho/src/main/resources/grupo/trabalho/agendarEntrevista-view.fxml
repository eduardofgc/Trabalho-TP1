<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="395.0" prefWidth="442.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.EntrevistaController">

   <children>
      <Label layoutX="90.0" layoutY="14.0" text="Gerenciar Entrevistas">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <ListView fx:id="listaEntrevistas" layoutX="59.0" layoutY="59.0" prefHeight="200.0" prefWidth="324.0" />

      <Button fx:id="cadastrarButton" layoutX="136.0" layoutY="271.0" prefHeight="26.0" prefWidth="170.0"
              text="Cadastrar nova entrevista" onAction="#clickCadastrarEntrevista" />

      <Button fx:id="removerButton" layoutX="136.0" layoutY="307.0" prefHeight="26.0" prefWidth="170.0"
              text="Remover entrevista" onAction="#clickRemoverEntrevista" />

      <Button fx:id="removerTodosButton" layoutX="136.0" layoutY="347.0"
              text="Remover todas as entrevistas" onAction="#clickRemoverTodasEntrevistas" />

   </children>
</AnchorPane>
