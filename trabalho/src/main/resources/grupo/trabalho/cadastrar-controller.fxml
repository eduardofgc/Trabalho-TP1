<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.CadastrarController">

    <VBox alignment="CENTER" spacing="25"
          AnchorPane.leftAnchor="70.0"
          AnchorPane.rightAnchor="70.0"
          AnchorPane.topAnchor="20.0"
          AnchorPane.bottomAnchor="40.0">

        <!-- Título -->
        <Label text="Cadastrar Candidatos" style="-fx-text-fill: #2c3e50;">
            <font>
                <Font name="Segoe UI Semibold" size="26" />
            </font>
        </Label>

        <!-- Campo Nome -->
        <VBox alignment="CENTER_LEFT" prefWidth="400" spacing="5.0">
            <Label text="Nome:" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <TextField fx:id="txtNome" prefWidth="400"
                       promptText="Digite o nome"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8;" />
        </VBox>

        <!-- Campo Email -->
        <VBox alignment="CENTER_LEFT" prefWidth="400" spacing="5.0">
            <Label text="Email:" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <TextField fx:id="txtEmail" prefWidth="400"
                       promptText="Digite o email"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8;" />
        </VBox>

        <!-- Campo Vaga -->
        <VBox alignment="CENTER_LEFT" prefWidth="400" spacing="5.0">
            <Label text="Vaga:" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" />
            <ComboBox fx:id="comboVaga" prefWidth="400"
                      promptText="Selecione a vaga"
                      style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8;" />
        </VBox>

        <!-- Botões -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="btnSalvar"
                    onAction="#salvarCandidato"
                    text="Salvar"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-padding: 8 20 8 20; -fx-background-radius: 8;" />

            <Button fx:id="btnVoltar"
                    onAction="#voltarMenu"
                    text="Voltar"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14px;
                           -fx-padding: 8 20 8 20; -fx-background-radius: 8;" />
        </HBox>
    </VBox>
</AnchorPane>