<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="530.0" prefWidth="665.0"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.MainController">

    <children>

        <Button fx:id="logoutButton" onAction="#handleLogout" text="Logout"
                onMouseEntered="#onHoverDark" onMouseExited="#onExitDark" onMousePressed="#onPress" onMouseReleased="#onReleaseDark"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 18 8 18; -fx-background-radius: 8; -fx-cursor: hand;"
                AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" />

        <Button fx:id="financeiroButton" layoutX="85.0" layoutY="391.0" onAction="#goToFinanceiro" prefHeight="42.0" prefWidth="494.0"
                text="Financeiro"
                onMouseEntered="#onHover" onMouseExited="#onExit" onMousePressed="#onPress" onMouseReleased="#onRelease"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 8; -fx-cursor: hand;" />

        <Button fx:id="recrutamentoButton" layoutX="85.0" layoutY="329.0" onAction="#goToRecrutamento" prefHeight="42.0" prefWidth="494.0"
                text="Recrutamento"
                onMouseEntered="#onHover" onMouseExited="#onExit" onMousePressed="#onPress" onMouseReleased="#onRelease"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 8; -fx-cursor: hand;" />

        <Button fx:id="candidaturaButton" layoutX="85.0" layoutY="265.0" onAction="#goToCandidatura" prefHeight="42.0" prefWidth="494.0"
                text="Candidatura"
                onMouseEntered="#onHover" onMouseExited="#onExit" onMousePressed="#onPress" onMouseReleased="#onRelease"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 8; -fx-cursor: hand;" />

        <Button fx:id="admButton" layoutX="85.0" layoutY="204.0" onAction="#goToAdm" prefHeight="41.0" prefWidth="494.0"
                text="Administração/Gestão"
                onMouseEntered="#onHover" onMouseExited="#onExit" onMousePressed="#onPress" onMouseReleased="#onRelease"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-background-radius: 8; -fx-cursor: hand;" />

        <Label layoutX="266.0" layoutY="129.0" text="Bem-vindo!" style="-fx-text-fill: #2c3e50;">
            <font><Font name="Segoe UI Bold" size="24.0" /></font>
        </Label>

        <Label layoutX="99.0" layoutY="54.0" prefHeight="74.0" prefWidth="467.0"
               text="Menu Principal - Sistema de Gestão de RH" style="-fx-text-fill: #2c3e50;">
            <font><Font name="Segoe UI Semibold" size="24.0" /></font>
        </Label>

        <ImageView fitHeight="66.0" fitWidth="62.0" layoutX="14.0" layoutY="454.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../images/logoCadastroFunc.png" />
            </image>
        </ImageView>

    </children>
</AnchorPane>
