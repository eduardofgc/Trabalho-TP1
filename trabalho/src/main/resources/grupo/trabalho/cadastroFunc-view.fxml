<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480" prefWidth="640"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.CadastroFunc">

    <children>

        <!-- Título -->
        <VBox alignment="CENTER" spacing="10.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="30.0">
            <Label style="-fx-text-fill: #2c3e50;"
                   text="Cadastro de Funcionário">
                <font>
                    <Font name="Segoe UI Semibold" size="32" />
                </font>
            </Label>
        </VBox>

        <!-- Campos principais -->
        <VBox alignment="CENTER" spacing="12.0"
              AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="60.0"
              AnchorPane.topAnchor="120.0">

            <HBox alignment="CENTER" spacing="20">
                <TextField fx:id="nomeField"
                           promptText="Nome"
                           prefHeight="40.0" prefWidth="260.0"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 0 10;"/>
                <TextField fx:id="cpfField"
                           promptText="CPF"
                           prefHeight="40.0" prefWidth="150.0"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 0 10;"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20">
                <TextField fx:id="matriculaField"
                           promptText="Matrícula"
                           prefHeight="40.0" prefWidth="150.0"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 0 10;"/>
                <DatePicker fx:id="dataAdmissaoPicker"
                            promptText="Data de admissão"
                            prefHeight="40.0" prefWidth="260.0"
                            style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7;"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20">
                <TextField fx:id="cargoField"
                           promptText="Cargo"
                           prefHeight="40.0" prefWidth="200.0"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 0 10;"/>
                <TextField fx:id="departamentoField"
                           promptText="Departamento"
                           prefHeight="40.0" prefWidth="210.0"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 0 10;"/>
            </HBox>

            <HBox alignment="CENTER" spacing="20">
                <TextField fx:id="salarioField"
                           promptText="Salário"
                           prefHeight="40.0" prefWidth="200.0"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-padding: 0 10;"/>
                <ComboBox fx:id="regimeCombo"
                          promptText="Regime"
                          prefHeight="40.0" prefWidth="150.0"
                          style="-fx-background-radius: 8; -fx-border-radius: 8;"/>
                <ComboBox fx:id="statusCombo"
                          promptText="Status"
                          prefHeight="40.0" prefWidth="150.0"
                          style="-fx-background-radius: 8; -fx-border-radius: 8;"/>
            </HBox>

            <!-- Botão Salvar -->
            <Button fx:id="salvarButton"
                    onAction="#salvarFuncionario"
                    text="Salvar"
                    prefHeight="42.0" prefWidth="220.0"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50;
                           -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                           -fx-background-radius: 8;"/>
        </VBox>

        <!-- Botão Voltar -->
        <Button fx:id="financButton"
                layoutX="210.0" layoutY="420.0"
                onAction="#handleMenuButton"
                text="Voltar ao Menu Principal"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white;
                       -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                       -fx-background-radius: 8;"/>

    </children>
</AnchorPane>
