<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<AnchorPane
        fx:controller="grupo.trabalho.CadastrarVagaController"
        prefHeight="385.0"
        prefWidth="438.0"
        style="-fx-background-color: white;"
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1">

    <children>

        <!-- Centered vertical layout -->
        <VBox alignment="TOP_CENTER"
              spacing="12"
              prefWidth="380"
              style="-fx-padding: 18 20;"
              AnchorPane.topAnchor="10"
              AnchorPane.leftAnchor="29"
              AnchorPane.rightAnchor="29"
              AnchorPane.bottomAnchor="10">

            <!-- TITLE -->
            <Label text="Cadastrar nova vaga" style="-fx-text-fill: #2c3e50;">
                <font><Font size="28"/></font>
            </Label>

            <!-- CARGO -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Cargo:" prefWidth="120" style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="cargoTextfield"
                           promptText="Digite o cargo"
                           prefWidth="230"
                           style="-fx-padding: 6;"/>
            </HBox>

            <!-- REQUISITOS -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Requisitos:" prefWidth="120" style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="requisitosTextfield"
                           promptText="Digite os requisitos"
                           prefWidth="230"
                           style="-fx-padding: 6;"/>
            </HBox>

            <!-- DEPARTAMENTO -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Departamento:" prefWidth="120" style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="departamentoTextfield"
                           promptText="Digite o departamento"
                           prefWidth="230"
                           style="-fx-padding: 6;"/>
            </HBox>

            <!-- STATUS -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Status:" prefWidth="120" style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="statusTextfield"
                           promptText="Ativa / Inativa"
                           prefWidth="230"
                           style="-fx-padding: 6;"/>
            </HBox>

            <!-- SALÁRIO BASE -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Salário Base:" prefWidth="120" style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="salarioBaseTextfield"
                           promptText="Digite o salário"
                           prefWidth="230"
                           style="-fx-padding: 6;"/>
            </HBox>

            <!-- DATA -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Data Abertura:" prefWidth="120" style="-fx-text-fill: #2c3e50;"/>
                <DatePicker fx:id="dataAberturaDataPicker"
                            prefWidth="230"/>
            </HBox>

            <Region prefHeight="8"/>

            <!-- BUTTON -->
            <Button fx:id="cadastrarVagaButton"
                    text="Cadastrar Vaga"
                    onAction="#clickCadastrarVaga"
                    prefWidth="180"
                    style="
                        -fx-background-color: #2c3e50;
                        -fx-text-fill: white;
                        -fx-background-radius: 10;
                        -fx-font-size: 14px;
                        -fx-padding: 8 12;
                    "/>

        </VBox>

    </children>
</AnchorPane>


