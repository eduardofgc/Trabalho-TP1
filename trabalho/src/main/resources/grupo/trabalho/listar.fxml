<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="420" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.ListarController">

    <children>

        <!-- Título -->
        <Label text="Lista de Candidatos"
               layoutX="160.0"
               layoutY="30.0"
               style="-fx-text-fill: #2c3e50;">
            <font>
                <Font name="Segoe UI Semibold" size="26" />
            </font>
        </Label>

        <!-- Tabela de Candidatos -->
        <TableView fx:id="tabela" layoutX="50.0" layoutY="90.0" prefHeight="250.0" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="180.0" text="Nome" />
                <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="colVaga" prefWidth="140.0" text="Vaga" />
            </columns>
        </TableView>

        <!-- Botão Voltar -->
        <Button text="Voltar"
                layoutX="260.0"
                layoutY="360.0"
                onAction="#voltarMenu"
                style="-fx-background-color: #2c3e50;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-padding: 8 20 8 20;
                       -fx-background-radius: 8;" />

    </children>
</AnchorPane>