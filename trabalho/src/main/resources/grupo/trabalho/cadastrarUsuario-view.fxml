<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="334.0" prefWidth="596.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.AdmController">

   <children>

      <!-- MAIN CONTAINER (no rounded corners, no shadow) -->
      <VBox alignment="TOP_CENTER"
            spacing="14"
            prefWidth="520"
            style="-fx-background-color: white; -fx-padding: 20 24;"
            AnchorPane.topAnchor="14"
            AnchorPane.bottomAnchor="14"
            AnchorPane.leftAnchor="38"
            AnchorPane.rightAnchor="38">

         <!-- TITLE -->
         <Label text="Cadastrar novo usuÃ¡rio" style="-fx-text-fill: #2c3e50;">
            <font><Font name="Segoe UI Semibold" size="20"/></font>
         </Label>

         <!-- LOGIN -->
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Login:" prefWidth="110" style="-fx-text-fill: #2c3e50;">
               <font><Font size="13"/></font>
            </Label>
            <TextField fx:id="loginTextField"
                       promptText="Digite o login"
                       prefWidth="320"
                       style="-fx-padding: 6;"/>
         </HBox>

         <!-- SENHA -->
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Senha:" prefWidth="110" style="-fx-text-fill: #2c3e50;">
               <font><Font size="13"/></font>
            </Label>
            <TextField fx:id="senhaTextField"
                       promptText="Digite a senha"
                       prefWidth="320"
                       style="-fx-padding: 6;"/>
         </HBox>

         <!-- EMAIL -->
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="E-mail:" prefWidth="110" style="-fx-text-fill: #2c3e50;">
               <font><Font size="13"/></font>
            </Label>
            <TextField fx:id="emailTextField"
                       promptText="Digite o e-mail"
                       prefWidth="320"
                       style="-fx-padding: 6;"/>
         </HBox>

         <!-- CHECKBOXES -->
         <HBox alignment="CENTER" spacing="18">
            <CheckBox fx:id="adminCheckBox" text="Admin?" />
            <CheckBox fx:id="gestorCheckBox" text="Gestor?" />
            <CheckBox fx:id="recrutadorCheckBox" text="Recrutador?" />
            <CheckBox fx:id="candidatoCheckBox" text="Candidato?" />
         </HBox>

         <Region prefHeight="6"/>

         <!-- BUTTON -->
         <Button fx:id="cadastrarUsuarioFinal"
                 onAction="#clickCadastrarUsuarioFinal"
                 text="Registrar"
                 prefWidth="140"
                 style="
                        -fx-background-color: #2c3e50;
                        -fx-text-fill: white;
                        -fx-background-radius: 10;
                        -fx-cursor: hand;
                        -fx-font-size: 14px;
                        -fx-padding: 8 14;
                    ">
            <font><Font size="14"/></font>
         </Button>

      </VBox>

   </children>
</AnchorPane>
