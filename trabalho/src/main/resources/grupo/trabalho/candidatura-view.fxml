<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="420" prefWidth="600"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.CandidaturaController">

    <children>
        <VBox alignment="CENTER" spacing="10.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="40.0">
            <Label style="-fx-text-fill: #2c3e50;"
                   text="Candidatura">
                <font>
                    <Font name="Segoe UI Semibold" size="32" />
                </font>
            </Label>
        </VBox>

        <VBox alignment="CENTER" spacing="15.0"
              AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
              AnchorPane.topAnchor="130.0">

            <Button fx:id="cadastrarCandidatosButton" prefHeight="42.0" prefWidth="220.0"
                    onAction="#goToCadastrar"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50;
                           -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                           -fx-background-radius: 8;"
                    text="Cadastrar Candidatos"/>

            <Button fx:id="listarCandidatosButton" onAction="#goToListar"
                    prefHeight="42.0" prefWidth="220.0"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50;
                           -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                           -fx-background-radius: 8;"
                    text="Listar Candidatos"/>

            <Button fx:id="statusDaCandidaturaButton" onAction="#goToStatus"
                    prefHeight="42.0" prefWidth="220.0"
                    style="-fx-background-color: white; -fx-text-fill: #2c3e50;
                           -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                           -fx-background-radius: 8;"
                    text="Status da Candidatura"/>
        </VBox>

        <Button fx:id="menuButton"
                layoutX="204.0" layoutY="345.0"
                onAction="#handleMenuButton"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white;
                       -fx-font-size: 14px; -fx-padding: 10 20 10 20;
                       -fx-background-radius: 8;"
                text="Voltar ao Menu Principal"/>
    </children>
</AnchorPane>
