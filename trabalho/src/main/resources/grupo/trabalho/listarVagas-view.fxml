<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="387.0" prefWidth="438.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grupo.trabalho.ListarVagasController">

    <VBox spacing="10.0" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

        <TextField fx:id="campoBusca" promptText="Pesquisar..." />
        <ListView fx:id="listaElementos" prefHeight="315.0" prefWidth="418.0" />

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="botaoExcluir" onAction="#clickBotaoExcluir" text="Remover vaga" />
            <Button fx:id="botaoLimparTudo" onAction="#clickBotaoLimparTudo" text="Remover todas as vagas" />
        </HBox>
    </VBox>
</AnchorPane>
