<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="800"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="grupo.trabalho.AdmController">

    <children>

        <VBox alignment="CENTER" spacing="10.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
            <Label style="-fx-text-fill: #2c3e50;" text="Administração / Gestão">
                <font><Font name="Segoe UI Semibold" size="32" /></font>
            </Label>
        </VBox>

        <AnchorPane fx:id="contentArea" prefHeight="334.0" prefWidth="600.0"
                    style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-border-radius: 12;
                       -fx-border-color: #cccccc; -fx-border-width: 1;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 14, 0, 0, 4);"
                    AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="100.0">
            <children></children>
        </AnchorPane>

        <Button fx:id="cadastrarUsuarioButton" onAction="#showCadastrarUsuario"
                layoutX="100.0" layoutY="457.0" text="Cadastrar Usuário"
                onMouseEntered="#onHover" onMouseExited="#onExit" onMousePressed="#onPress" onMouseReleased="#onRelease"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14px;
                   -fx-padding: 10 20 10 20; -fx-background-radius: 8; -fx-cursor: hand;" />

        <Button fx:id="listarUsuariosButton" onAction="#showListarUsuarios"
                layoutX="325.0" layoutY="456.0" prefHeight="42.0" prefWidth="150.0"
                text="Listar Usuários"
                onMouseEntered="#onHover" onMouseExited="#onExit" onMousePressed="#onPress" onMouseReleased="#onRelease"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14px;
                   -fx-padding: 10 20 10 20; -fx-background-radius: 8; -fx-cursor: hand;" />

        <Button fx:id="gerarRelatoriosButton" onAction="#showGerarRelatorios"
                layoutX="549.0" layoutY="457.0" prefHeight="41.0" prefWidth="150.0"
                text="Gerar Relatórios"
                onMouseEntered="#onHover" onMouseExited="#onExit" onMousePressed="#onPress" onMouseReleased="#onRelease"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14px;
                   -fx-padding: 10 20 10 20; -fx-background-radius: 8; -fx-cursor: hand;" />

        <Button fx:id="voltarMenuButton" onAction="#voltarMenu"
                layoutX="304.0" layoutY="523.0" text="Voltar ao Menu Principal"
                onMouseEntered="#onHoverDark" onMouseExited="#onExitDark" onMousePressed="#onPress" onMouseReleased="#onReleaseDark"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14px;
                   -fx-padding: 10 20 10 20; -fx-background-radius: 8; -fx-cursor: hand;" />

    </children>
</AnchorPane>
